# ============================================
# ملف الإعدادات - نسخة المثال
# ============================================
# انسخ هذا الملف وأعد تسميته إلى .env
# ثم عدّل القيم حسب احتياجاتك

# ============================================
# إعدادات Google Apps Script
# ============================================

# رابط Google Apps Script API
# استبدل YOUR_SCRIPT_ID برابط السكربت الفعلي
GOOGLE_APPS_SCRIPT_URL=https://script.google.com/macros/d/YOUR_SCRIPT_ID/usercopy

# معرف جدول Google Sheets
GOOGLE_SHEET_ID=YOUR_SHEET_ID

# ============================================
# إعدادات التطبيق
# ============================================

# اسم التطبيق
APP_NAME=نظام إدارة حجوزات الاستراحات

# إصدار التطبيق
APP_VERSION=1.0.0

# العملة الافتراضية
CURRENCY=ر.س

# ============================================
# إعدادات الجلسة
# ============================================

# مدة انتهاء الجلسة (بالدقائق)
SESSION_TIMEOUT_MINUTES=20

# فترة فحص الجلسة (بالدقائق)
SESSION_CHECK_INTERVAL_MINUTES=1

# ============================================
# إعدادات الواتساب
# ============================================

# رقم الهاتف الافتراضي
DEFAULT_PHONE=

# تمبلت رسائل الواتساب الافتراضي
WHATSAPP_TEMPLATE=مرحباً {name}،\n\nلديك حجز معنا بمبلغ {amount}.\n\nالرجاء سداد المبلغ في أقرب وقت.\n\nشكراً لك!

# ============================================
# إعدادات الأمان
# ============================================

# تفعيل HTTPS (يجب أن يكون true في الإنتاج)
USE_HTTPS=false

# السماح بـ localhost (للتطوير فقط)
ALLOW_LOCALHOST=true

# ============================================
# إعدادات قاعدة البيانات
# ============================================

# اسم الورقة الخاصة بالمستخدمين
SHEET_USERS=المستخدمون

# اسم الورقة الخاصة بالحجوزات
SHEET_BOOKINGS=البيانات

# اسم الورقة الخاصة بالمصروفات
SHEET_EXPENSES=المصروفات

# اسم الورقة الخاصة بالإعدادات
SHEET_SETTINGS=الإعدادات

# ============================================
# إعدادات المنشأة
# ============================================

# اسم المنشأة
FACILITY_NAME=استراحتي

# عنوان المنشأة
FACILITY_ADDRESS=

# رقم هاتف المنشأة
FACILITY_PHONE=

# بريد المنشأة
FACILITY_EMAIL=

# ============================================
# إعدادات الإشعارات
# ============================================

# تفعيل الإشعارات
ENABLE_NOTIFICATIONS=true

# تفعيل إشعارات البريد الإلكتروني
ENABLE_EMAIL_NOTIFICATIONS=false

# تفعيل إشعارات الواتساب
ENABLE_WHATSAPP_NOTIFICATIONS=true

# ============================================
# إعدادات التطوير
# ============================================

# وضع التطوير (true أو false)
DEBUG_MODE=false

# مستوى السجل (log, warn, error)
LOG_LEVEL=log

# ============================================
# إعدادات النسخ الاحتياطية
# ============================================

# تفعيل النسخ الاحتياطية التلقائية
AUTO_BACKUP=true

# عدد النسخ الاحتياطية المحفوظة
BACKUP_COUNT=10

# ============================================
# إعدادات التقارير
# ============================================

# صيغة التاريخ (ar-SA, en-US, إلخ)
DATE_FORMAT=ar-SA

# صيغة العملة
CURRENCY_FORMAT=ar-SA

# ============================================
# إعدادات الألوان
# ============================================

# اللون الأساسي
PRIMARY_COLOR=#2c3e50

# اللون الثانوي
SECONDARY_COLOR=#3498db

# لون النجاح
SUCCESS_COLOR=#27ae60

# لون الخطأ
DANGER_COLOR=#e74c3c

# لون التحذير
WARNING_COLOR=#f39c12

# ============================================
# إعدادات أخرى
# ============================================

# عدد محاولات تسجيل الدخول المسموحة
MAX_LOGIN_ATTEMPTS=3

# مدة قفل الحساب (بالدقائق)
ACCOUNT_LOCK_DURATION=1

# عدد الحجوزات المعروضة في الصفحة الواحدة
BOOKINGS_PER_PAGE=10

# عدد المصروفات المعروضة في الصفحة الواحدة
EXPENSES_PER_PAGE=10
